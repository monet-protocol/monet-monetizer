{
  "name": "monet-monetizer",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "ci:coverage": "forge coverage --report lcov --ir-minimum && bun run lcov:clean",
    "coverage": "FOUNDRY_PROFILE=dev forge coverage --report lcov --ir-minimum && bun run lcov:clean && bun run lcov:generate-html",
    "compile": "forge build && hardhat compile",
    "compile:dev": "FOUNDRY_PROFILE=dev forge build",
    "gas": "FOUNDRY_PROFILE=dev bun run test --gas-report",
    "test:unit": "forge test -vvv --match-path \"tests/units/**/*.sol\"",
    "test:invariant": "forge test -vvv --match-path \"tests/invariants/**/*.sol\"",
    "slither": "slither .",
    "test": "forge test -vvv",
    "lcov:clean": "lcov --remove lcov.info -o lcov.info 'test/**' 'scripts/**' 'contracts/transmuter/configs/**' 'contracts/utils/**'",
    "lcov:generate-html": "genhtml lcov.info --output=coverage",
    "size": "forge build --skip test --sizes",
    "size:dev": "FOUNDRY_PROFILE=dev forge build --skip test --sizes",
    "prettier": "prettier --write '**/*.sol'",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:sol": "bun solhint \"{scripts,contracts,tests}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "verify": "rocketh-verify etherscan"
  },
  "keywords": [],
  "author": "Cooper Labs, Inc.",
  "license": "BUSL-1.1",
  "bugs": {
    "url": "https://github.com/monet-protocol/monet-monetizer/issues"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-keystore": "^3.0.1",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.0",
    "@nomicfoundation/hardhat-node-test-runner": "^3.0.2",
    "@nomicfoundation/hardhat-viem": "^3.0.0",
    "@rocketh/deploy": "^0.14.0",
    "@rocketh/doc": "^0.14.4",
    "@rocketh/export": "^0.14.4",
    "@rocketh/proxy": "^0.14.1",
    "@rocketh/read-execute": "^0.14.0",
    "@rocketh/signer": "^0.14.0",
    "@rocketh/verifier": "^0.14.4",
    "@rocketh/viem": "^0.14.0",
    "@types/node": "^24.3.0",
    "@types/fs-extra": "^11.0.4",
    "dotenv": "^17.2.1",
    "forge-std": "github:foundry-rs/forge-std#v1.9.5",
    "fs-extra": "^11.3.0",
    "prettier": "^3.5.3",
    "solhint": "^3.5.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.2",
    "hardhat": "^3.0.3",
    "hardhat-deploy": "^2.0.0-next.40",
    "ldenv": "^0.3.12",
    "rocketh": "^0.14.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "viem": "^2.37.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.2.0",
    "@openzeppelin/contracts-upgradeable": "^5.2.0"
  }
}
